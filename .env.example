# Entwicklungsumgebung für llkjj_knut
# Diese Datei wird automatisch von django-environ geladen

# Virtual Environment Pfad
VENV_PATH=/Users/czok/Skripte/venv_llkjj

# Django Basis-Konfiguration
DEBUG=True
SECRET_KEY=dev-secret-key-change-in-production-super-long-and-secure-key
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Datenbank (SQLite für Entwicklung)
DATABASE_URL=sqlite:///db.sqlite3

# PostgreSQL (für Produktion - auskommentiert)
# DATABASE_URL=postgres://username:password@localhost:5432/llkjj_knut

# Medien- und Staticfiles
MEDIA_ROOT=media
STATIC_ROOT=staticfiles
STATIC_URL=/static/
MEDIA_URL=/media/

# Sicherheit
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_SECURE=False
SECURE_SSL_REDIRECT=False

# E-Mail (Development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Celery & Redis (für asynchrone Tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# OCR & File Processing
TESSERACT_CMD=/usr/local/bin/tesseract
MAX_UPLOAD_SIZE=10485760  # 10MB

# Logging Konfiguration - Peter Zwegat Edition
# "Ordnung im Logging ist Ordnung im System!"
LOG_LEVEL=INFO
ENABLE_FILE_LOGGING=True
LOG_TO_CONSOLE=True
LOG_MAX_FILE_SIZE=5242880
LOG_BACKUP_COUNT=5
LOG_ROTATE_DAILY=False

# Projekt-spezifische Einstellungen
COMPANY_NAME="Künstlerischer Betrieb"
FISCAL_YEAR_START=1  # 1. Januar
DEFAULT_TIMEZONE=Europe/Berlin

# Peter Zwegat Modus (für Endnutzer-Kommentare)
PETER_ZWEGAT_MODE=True
HUMOR_LEVEL=medium

# SKR03 Pfad
SKR03_JSON_PATH=skr03_konten.json

# Backup & Archivierung
BACKUP_RETENTION_DAYS=365
AUTO_BACKUP_ENABLED=True
